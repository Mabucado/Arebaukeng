<!-- res/drawable/bubble_incoming.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color of the rectangle -->
            <size android:width="50dp" android:height="20dp" /> <!-- Size of the rectangle -->

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <solid android:color="#FFFFFF" /> <!-- Bubble color -->
            <corners android:topLeftRadius="12dp"
                android:topRightRadius="12dp"
                android:bottomRightRadius="0dp"
                android:bottomLeftRadius="12dp" /> <!-- Rounded corners -->
            <padding android:left="16dp"
                android:top="16dp"
                android:right="16dp"
                android:bottom="16dp" /> <!-- Padding inside the shape -->

        </shape>
    </item>
    <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="100dp">
        <rotate android:fromDegrees="-45">
            <shape android:shape="rectangle">
                <solid android:color="#EDF3EE" /> <!-- Tail color -->
            </shape>
        </rotate>
    </item>


</layer-list>
